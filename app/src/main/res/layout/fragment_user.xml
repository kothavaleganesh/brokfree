<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sohan Honakeri"
                        android:textColor="@color/login_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/useremail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sohan@gmail.com"
                        android:textColor="@color/login_text" />

                    <TextView
                        android:id="@+id/userphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 222 6523 23"
                        android:textColor="@color/login_text" />

                    <TextView
                        android:id="@+id/useradd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="London, 93-107 Shaftesbury Ave, W1D 5DY "
                        android:textColor="@color/login_text"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_clientreq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Client Requirment"
                        android:textColor="@color/login_text"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/cbRequirement1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Cross Ventilation"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Intercome System"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Wordrops"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:text="Broadband Connectvity"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Wifi"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Instant Gyser"
                                android:textColor="@color/login_text" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/cbRequirement7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Cross Ventilation1"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Intercome System"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Wordrops"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:singleLine="true"
                                android:text=" Broadband Connectvity"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Wifi"
                                android:textColor="@color/login_text" />

                            <CheckBox
                                android:id="@+id/cbRequirement12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:button="@drawable/checkbox_selector"
                                android:padding="3dp"
                                android:text=" Instant Gyser"
                                android:textColor="@color/login_text" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/line" />

                <LinearLayout
                    android:id="@+id/lllog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/userlogs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logs"
                        android:textColor="@color/login_text"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Tushar Sachde , Andheri"
                            android:textColor="@color/login_text" />

                        <TextView
                            android:id="@+id/userstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Status"
                            android:textColor="@color/login_text" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/userstatusfull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1dp"
                        android:minLines="3"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:textColor="@color/login_text" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userlastmeeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="1dp"
                                android:text="Last Meeting :"
                                android:textColor="@color/login_text" />

                            <TextView
                                android:id="@+id/userlastmeetingtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="1dp"
                                android:text="Jan 26,2016"
                                android:textColor="@color/login_text" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/reschedule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="1dp"
                            android:clickable="true"
                            android:text="Reschedule"
                            android:textColor="@color/title" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/done"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:background="@color/button"
                        android:text="Done"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/createlog"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@color/button"
                        android:text="Create Log"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />


                </RelativeLayout>
            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</LinearLayout>
