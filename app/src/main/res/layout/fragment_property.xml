<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/property1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8a8a8a"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/property_page"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/propertyname1"
                            android:text="568 E 1st Ave, Ney Jersey"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/propertyadd1"
                            android:text="London, 93-107 Shaftesbury Ave, W1D 5DY "
                            android:paddingLeft="5dp"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@color/button"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Seen"
                        android:id="@+id/seen1"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/property2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8a8a8a"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/property_page"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="568 E 1st Ave, Ney Jersey"
                            android:paddingLeft="5dp"
                            android:id="@+id/propertyname2"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="London, 93-107 Shaftesbury Ave, W1D 5DY "
                            android:paddingLeft="5dp"
                            android:id="@+id/propertyadd2"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@color/button"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Seen"
                        android:id="@+id/seen2"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/property3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8a8a8a"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/property_page"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="568 E 1st Ave, Ney Jersey"
                            android:paddingLeft="5dp"
                            android:id="@+id/propertyname3"
                            android:paddingTop="5dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="London, 93-107 Shaftesbury Ave, W1D 5DY "
                            android:paddingLeft="5dp"
                            android:id="@+id/propertyadd3"
                            android:paddingBottom="5dp"
                            />
                    </LinearLayout>
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@color/button"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white"
                        android:text="Seen"
                        android:id="@+id/seen3"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
